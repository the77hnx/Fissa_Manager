<!-- res/layout/order_item_ar.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/profileordercolor"
        android:padding="8dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أحمد علي"
                android:textColor="@color/black"
                android:fontFamily="@font/hacen_beirut_bight"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اليوم الساعة 12:33 ص"
                android:textSize="14sp"
                android:fontFamily="@font/hacen_beirut_bight"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الطلب: 348"
                android:textSize="14sp"
                android:fontFamily="@font/hacen_beirut_bight"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الإجمالي: 42.00 دج"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/hacen_beirut_bight"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- res/layout/order_item_ar.xml -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- باقي التخطيط كما هو -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:text="طاكوس"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_quantity_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:gravity="center"

                    android:text="الكمية: 2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:gravity="end"

                    android:text="24.00 دج"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:text="بيتزا"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_quantity_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:gravity="center"
                    android:text="الكمية: 1"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/hacen_beirut_bight"
                    android:gravity="end"
                    android:text="18.00 دج"

                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/order_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="الرسالة: مرحباً، الرجاء وضع الصلصة الخضراء في طلبي وأخبر عامل التوصيل أنه يجب أن يأتي إلى الطابق الثاني لأنني لست في المنزل"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/order_Status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacen_beirut_bight"
            android:text="حالة الطلب : تم التوصيل"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Details_order"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/tomato_padding_button"
            android:fontFamily="@font/hacen_beirut_bight"
            android:text="تفاصيل الطلب"
            android:textColor="@color/tomato_red"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>